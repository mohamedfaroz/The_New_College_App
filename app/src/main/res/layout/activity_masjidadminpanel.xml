<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="SpeakableTextPresentCheck"

    tools:layout_editor_absoluteX="1dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:context=".masjidadminpanel_activity"
        tools:ignore="ExtraText">


        <TextView
            android:id="@+id/textView"
            android:layout_width="294dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/tvprayertimings_border"
            android:fontFamily="@font/abril_fatface"
            android:padding="6dp"
            android:text="PRAYER TIMINGS"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/etdate1"
            android:layout_width="203dp"
            android:layout_height="56dp"
            android:layout_marginTop="92dp"
            android:ems="10"
            android:fontFamily="@font/aldrich"
            android:hint="select date"
            android:inputType="date"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.436"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvfajr"
            android:layout_width="117dp"
            android:layout_height="68dp"
            android:layout_marginTop="216dp"
            android:background="@drawable/tvfajr_border"
            android:fontFamily="@font/abril_fatface"
            android:padding="10dp"
            android:text="Fajr :"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.054"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="117dp"
            android:layout_height="68dp"
            android:layout_marginTop="320dp"
            android:background="@drawable/tvzuhr_border"
            android:fontFamily="@font/abril_fatface"
            android:padding="10dp"
            android:text="Zuhr :"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.054"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="174dp"
            android:layout_height="69dp"
            android:layout_marginTop="428dp"
            android:background="@drawable/tvmaghrib_border"
            android:fontFamily="@font/abril_fatface"
            android:padding="10dp"
            android:text="Maghrib :"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.025"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="110dp"
            android:layout_height="61dp"
            android:layout_marginTop="532dp"
            android:background="@drawable/tvmaghrib_border"
            android:fontFamily="@font/abril_fatface"
            android:padding="10dp"
            android:text="Isha :"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.076"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="173dp"
            android:layout_height="60dp"
            android:layout_marginTop="636dp"
            android:background="@drawable/tvmaghrib_border"
            android:fontFamily="@font/abril_fatface"
            android:padding="10dp"
            android:text="Jummah :"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.029"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button"
            android:layout_width="123dp"
            android:layout_height="62dp"
            android:layout_marginTop="800dp"
            android:text="Apply"
            app:cornerRadius="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
